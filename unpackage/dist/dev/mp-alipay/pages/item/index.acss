
page,
page,
#app,
.wx-pages {
	padding: 0;
	margin: 0;
	height: 100%;
	overflow: hidden;
	-webkit-overflow-scrolling: touch;
}
.box {
	width: 100%;
	overflow: hidden;
	/* margin-top: 100upx; */
}
.box ._ul ._li {}
.ctx {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
	font-size: 28rpx;
}
.context,
.context2 {
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid #F3F3F3;
	border-top: 2rpx solid #F3F3F3;
	overflow: hidden;
}
.context2 {
	padding: 20rpx 0 !important;
}
.context ._ul ._li {
	width: 48%;
	height: 160rpx;
	margin: 10rpx 6rpx 20rpx 8rpx;
	background: #2f6ba7;
	float: left;
	list-style: none;
	border-radius: 6rpx;
	font-size: 30rpx;
	padding: 20rpx;
	box-sizing: border-box;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	color: #FFFFFF;
}
.context2 ._ul ._li {
	list-style: none;
	overflow: hidden;
	float: left;
	height: 90rpx;
	padding: 15rpx 40rpx;
	width: 100%;
	line-height: 60rpx;
	font-size: 28rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid #F3F3F3;
}
.context2 ._ul ._li ._span {
	float: left;
}
.context2 ._ul ._li ._span:nth-child(1) {
	width: 60rpx;
	height: 60rpx;
	background: #2f6ba7;
	border-radius: 8rpx;
	margin-right: 20rpx;
}
.context2 ._ul ._li ._span:last-child {
	float: right;
	width: 60rpx;
	height: 60rpx;
}
.context2 ._ul ._li ._span:last-child image {
	width: 100%;
	height: 100%;
}
.box-loading {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 1000rpx;
	border: 1px solid rgba(255, 255, 255, 0.1);
	border-radius: 10rpx;
	margin-top: 30rpx;
	/* flex: 0 0 600upx; */
	/* background: #040038; */
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	overflow: hidden;
}
.fix2 {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 0;
	background: rgba(0, 0, 0, 0.4);
	z-index: 999;
}
.fixed_select {
	width: 100%;
	height: 14%;
	max-width: 1280rpx;
	position: fixed;
	bottom: 0;
	background: white;
	z-index: 1000;
	-webkit-transition: all .4s;
	-moz-transition: all .4s;
}
.fixed_select2 {
	width: 100%;
	height: 14%;
	max-width: 1280rpx;
	position: fixed;
	bottom: -10%;
	background: white;
	z-index: 51;
	-webkit-transition: all .4s;
	-moz-transition: all .4s;
}
.fixed_select3 {
	width: 100%;
	height: 14%;
	max-width: 1280rpx;
	position: fixed;
	bottom: -25%;
	background: white;
	z-index: 1000;
	-webkit-transition: all .4s;
	-moz-transition: all .4s;
}
.fixed_select4 {
	width: 100%;
	height: 20%;
	max-width: 1280rpx;
	position: fixed;
	bottom: 0;
	background: white;
	z-index: 51;
	-webkit-transition: all .4s;
	-moz-transition: all .4s;
}
.fixed_title {
	display: block;
	text-align: center;
	font-size: 24rpx;
	color: #333;
	height: 70rpx;
	line-height: 70rpx;
	background: #ececec;
}
.fixed_title2 {
	display: block;
	text-align: center;
	font-size: 30rpx;
	color: #333;
	height: 70rpx;
	line-height: 70rpx;
	/* background: #ececec; */
	border-bottom: 2rpx solid #F3F3F3;
}
.select_radio,
.select_radio2 {
	position: absolute;
	top: 0rpx;
	left: 0;
	right: 0;
	bottom: 0;
	overflow: auto;
}
.select_radio2 {
	top: 70rpx !important;
}
.select_radio .vw,
.select_radio2 .vw {
	padding: 20rpx 40rpx;
	line-height: 40rpx;
	/* color: #555; */
	border-bottom: 2rpx solid #ececec;
	/* font-size: 24upx; */
	text-align: center;
}
.select_radio .vw3,
.select_radio2 .vw3 {
	padding: 20rpx 40rpx;
	line-height: 40rpx;
	text-align: center;
}
.select_radio .vw1,
.select_radio2 .vw1 {
	font-size: 32rpx;
}
.select_radio .vw2,
.select_radio2 .vw2 {
	font-size: 28rpx;
	color: red;
}

