
.content{
	width: 100%;
	/* height: 100upx; */
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.content textarea{
	width: 100%;
	height: 100rpx;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.select{
	width: 100%;
	overflow: hidden;
}
.select view{
	width: 100%;
	float: left;
}
.select .title{
	width: 100%;
	padding: 10rpx 40rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 24rpx;
	color: #B0B0B0;
}
.man{
	width: 100%;
	overflow: hidden;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-top: 20rpx;
	border-bottom: 2rpx solid #F3F3F3;
	border-top: 2rpx solid #F3F3F3;
}
.man .sp1{
	width: 80%;
	float: left;
	padding: 6rpx 0 0 0;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.man .sp1 image{
	width: 80rpx;
	height: 80rpx;
	-webkit-border-radius: 50%;
	        border-radius: 50%;
}
.man .sp2{
	width: 60rpx;
	height: 60rpx;
	float: right;
	padding: 4rpx 0 0 0;
	margin-top: 10rpx;
}
.man .sp2 image{
	width: 100%;
	height: 100%;
}
.btn{
	width: 400rpx;
	height: 80rpx;
	margin: 60rpx auto 0;
}
.btn ._a{
	display: block;
	width: 100%;
	height: 100%;
	-webkit-border-radius: 50rpx;
	        border-radius: 50rpx;
	background: #0081ff;
	text-align: center;
	line-height: 80rpx;
	color: #fff;
	font-size: 28rpx;
}

