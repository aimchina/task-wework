
.box {
	width: 100%;
	overflow: hidden;
	/* margin-top: 100upx; */
}
.box ._ul ._li {}
.ctx{
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	padding: 0 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	font-size: 28rpx;
}
.context,.context2{
	width: 100%;
	padding: 20rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 2rpx solid #F3F3F3;
	border-top: 2rpx solid #F3F3F3;
	overflow: hidden;
}
.context ._ul ._li{
	width: 48%;
	height: 160rpx;
	margin: 10rpx 6rpx 20rpx 8rpx;
	background: #1CC2F7;
	float: left;
	list-style: none;
	-webkit-border-radius: 20rpx;
	        border-radius: 20rpx;
	font-size: 30rpx;
	padding: 10rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.context2 ._ul ._li{
	list-style: none;
	overflow: hidden;
	float: left;
	height: 80rpx;
	padding:10rpx 20rpx;
	width: 100%;
	line-height: 60rpx;
	font-size: 28rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-bottom: 2rpx solid #F3F3F3;
}
.context2 ._ul ._li ._span{
	float: left;
}
.context2 ._ul ._li ._span:nth-child(1){
	width: 60rpx;
	height: 60rpx;
	background: #333333;
	-webkit-border-radius:8rpx;
	        border-radius:8rpx;
	margin-right: 20rpx;
}
.context2 ._ul ._li ._span:nth-child(1) image{
	width: 100%;
	height: 100%;
}

